{% extends 'base.html.jinja' %}

{% block title %}
  Admin Dashboard
{% endblock %}


{% block content %}
  <h2>Admin Dashboard</h2>

  <!-- Display City Table -->
  <table>
    <thead>
      <tr>
        <th>City ID</th>
        <th>City Name</th>
      </tr>
    </thead>
    <tbody>
      {% for city in cities %}
      <tr>
        <td>{{ city.cityId }}</td>
        <td>{{ city.cityName }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <form id="highTempForm" method="post" action="/admin">
    <div class="row">
      <div class="col-md-6">
        <label for="city">City:</label>
        <select class="selectpicker" data-live-search="true" id="city" name="city_id">
          {% for city in cities %}
          <option value="{{ city.cityId }}">{{ city.cityName }}</option>
          {% endfor %}
        </select>
      </div>
      <div class="col-md-6">
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" required>
      </div>
    </div><br>
    <div class="row">
      <div class="col-md-4">
        <label for="tempMin">Temperature Min:</label>
        <input type="number" id="tempMin" name="tempMin" required>
      </div>
      <div class="col-md-4">
        <label for="tempMax">Temperature Max:</label>
        <input type="number" id="tempMax" name="tempMax" required>
      </div>
      <div class="col-md-4">
        <label for="sunshine">Sunshine:</label>
        <input type="number" id="sunshine" name="sunshine" required>
      </div>
    </div><br>

    <div class="row">
      <div class="col-md-4">
        <label for="rainfall">Rainfall:</label>
        <input type="number" id="rainfall" name="rainfall" required>
      </div>
      <div class="col-md-4">
        <label for="evaporation">Evaporation:</label>
        <input type="number" id="evaporation" name="evaporation" required>
      </div>
      <div class="col-md-4">
        <label for="cloud9am">Cloud 9AM:</label>
        <input type="number" id="cloud9am" name="cloud9am" required>
      </div>
    </div><br>

    <div class="row">
      <div class="col-md-4">
        <label for="cloud3pm">Cloud 3PM:</label>
        <input type="number" id="cloud3pm" name="cloud3pm" required>
      </div>
      <div class="col-md-4">
        <label for="pressure9am">Pressure 9AM:</label>
        <input type="number" id="pressure9am" name="pressure9am" required>
      </div>
      <div class="col-md-4">
        <label for="pressure3pm">Pressure 3PM:</label>
        <input type="number" id="pressure3pm" name="pressure3pm" required>
      </div>
    </div><br>

    <div class="row">
      <div class="col-md-4">
        <label for="humidity9am">Humidity 9AM:</label>
        <input type="number" id="humidity9am" name="humidity9am" required>
      </div>
      <div class="col-md-4">
        <label for="humidity3pm">Humidity 3PM:</label>
        <input type="number" id="humidity3pm" name="humidity3pm" required>
      </div>
      <div class="col-md-4">
        <label for="windGustSpeed">Wind Gust Speed:</label>
        <input type="number" id="windGustSpeed" name="windGustSpeed" required>
      </div>
    </div><br>

    <div class="row">
      <div class="col-md-4">
        <label for="windGustDir">Wind Gust Direction:</label>
        <input type="text" id="windGustDir" name="windGustDir" required>
      </div>
      <div class="col-md-4">
        <label for="windSpeed9am">Wind Speed 9AM:</label>
        <input type="number" id="windSpeed9am" name="windSpeed9am" required>
      </div>
      <div class="col-md-4">
        <label for="windSpeed3pm">Wind Speed 3PM:</label>
        <input type="number" id="windSpeed3pm" name="windSpeed3pm" required>
      </div>
    </div><br>

    <div class="row">
      <div class="col-md-4">
        <label for="windDir9am">Wind Direction 9AM:</label>
        <input type="text" id="windDir9am" name="windDir9am" required>
      </div>
      <div class="col-md-4">
        <label for="windDir3pm">Wind Direction 3PM:</label>
        <input type="text" id="windDir3pm" name="windDir3pm" required>
      </div>
      <div class="col-md-4">
        <label for="rainToday">Rain Today:</label>
        <input type="checkbox" id="rainToday" name="rainToday" value="true">
      </div>
    </div><br>

    <div class="row">
      <div class="col-md-4">
        <label for="rainTomorrow">Rain Tomorrow:</label>
        <input type="checkbox" id="rainTomorrow" name="rainTomorrow" value="true">
      </div>
      
    </div><br>

    <button type="submit">Update High Temperature</button>
  </form>
{% endblock %}
