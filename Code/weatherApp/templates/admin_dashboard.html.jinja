{% extends 'base.html.jinja' %}

{% block title %}
  Admin Dashboard
{% endblock %}


{% block content %}
  <h2>Admin Dashboard</h2>

  <!-- Display City Table -->
  <table>
    <thead>
      <tr>
        <th>City ID</th>
        <th>City Name</th>
      </tr>
    </thead>
    <tbody>
      {% for city in cities %}
      <tr>
        <td>{{ city.cityId }}</td>
        <td>{{ city.cityName }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <form id="highTempForm" method="post" action="/admin">
    <label for="city">City:</label>
    <select class="selectpicker" data-live-search="true" id="city" name="city_id">
      {% for city in cities %}
      <option value="{{ city.cityId }}">{{ city.cityName }}</option>
      {% endfor %}
    </select>

    <label for="temp_high">High Temperature:</label>
    <input type="number" id="temp_high" name="temp_high" required><br><br>

    <button type="submit">Update High Temperature</button>
  </form>
{% endblock %}
