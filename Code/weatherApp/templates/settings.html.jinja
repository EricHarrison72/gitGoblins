{% extends 'base.html.jinja' %}

{% block title %}
  User Settings
{% endblock %}

{% block header %}
  User Settings
    
  <br>
  
  <div class="button-container">
    <button onclick="window.location.href= '{{ url_for('views.map') }}';" class="button-style-headers">
      Map
    </button>
    <button onclick="window.location.href= '{{ url_for('views.weather_summary') }}';" class="button-style-headers">
      Weather Summary
    </button>
    <button onclick="window.location.href= '{{ url_for('views.graph') }}';" class="button-style-headers">
      Graphs
    </button>
    <button onclick="window.location.href= '{{ url_for('auth.admin_dashboard') }}';" class="button-style-headers">
      Admin Dashboard
    </button>
  </div>
{% endblock %}

{% block content %}
  <h2>User Settings</h2>

  <form id="userSettingsForm" method="post" action="{{ url_for('views.settings') }}">
    <div style="display: flex; align-items: center;">
      <label for="emailList">Email List:</label>
      <input type="checkbox" id="emailList" name="emailList" {% if user.emailList %} checked {% endif %}>
    </div>
    <br>

    <label for="cityId">City:</label>
    <select id="cityId" name="cityId">
      {% for city in cities %}
        <option value="{{ city.cityId }}" {% if user.cityId == city.cityId %} selected {% endif %}>{{ city.cityName }}</option>
      {% endfor %}
    </select><br><br>

    <button type="submit">Update Settings</button>
  </form>
{% endblock %}

