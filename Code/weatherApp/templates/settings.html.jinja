{% extends 'base.html.jinja' %}

{% import 'helpers/selectors.html.jinja' as selectors %}

{% block title %}
  User Settings
{% endblock %}

{% block header %}
  User Settings
{% endblock %}

{% block content %}
  <h2>User Settings</h2>

  <form id="userSettingsForm" method="post" action="{{ url_for('views.settings') }}">
    <div style="display: flex; align-items: center;">
      <label for="emailList">Email List:</label>
      <input type="checkbox" id="emailList" name="emailList" {% if user.emailList %} checked {% endif %}>
    </div>
    <br>
    {{ selectors.select_single_location(url_arg_city=user.cityName) }}
    <br><br>

    <button type="submit">Update Settings</button>
  </form>
{% endblock %}
