{% extends 'base.html.jinja' %}
<!-- 
This template expects the following parameters:
  weather_dict - dictionary with keys:
    - 'city_name'
    - 'date'
    - 'temp_high', 
    - 'temp_low', 
    - 'rainfall', 
    - 'raining', 
    - 'wind_speed', 
    - 'wind_dir'
-->

{% block title %}
  Weather Summary
{% endblock %}

{% block header %}
  {{ weather_dict['city_name'] }}
{% endblock %}

{% block content %}
  <h3>{{ weather_dict['date'] }}</h3>

  <font size="+2">{{ weather_dict['temp_high'] }}&deg</font><font size="-2"><sub>high</sub></font> |
  <font size="+2">{{ weather_dict['temp_low'] }}&deg</font><font size="-2"><sub>low</sub></font>

  <br></br><br></br>

  <table>
    <tr>
      <td>It is raining | <b>{{ weather_dict['rainfall'] }}</b></td>
      <td>Precipitation% | <b>{{ weather_dict['raining'] }}</b></td>
    </tr>
    <tr>
      <td>Wind speed | <b>{{ weather_dict['wind_speed'] }}</b></td>
      <td>Wind direction | <b>{{ weather_dict['wind_dir'] }}</b></td>
    </tr>
  </table>

{% endblock %}
