
{# -------------------------
index.html.jinja
(The home page)

This template expects the following parameters:
 - weather_dict: a dictionary with a bunch of weather data info (see weather_summary.html.jinja)
 - weather_icon: str - refers to what type of icon to display
 - rain_prediction: 1 or 0
-------------------------- #}

{% extends 'base.html.jinja' %}
{% import 'helpers/data_display.html.jinja' as data_display %}
{% block scripts %}
  <script src="{{ url_for('static', filename='js/darkmode.js') }}"></script>
{% endblock %}
{% block title %}
  Home
{% endblock %}

{% block header %}
  Home
{% endblock %}

{% block content %}
  <br>
  <div class="button-container">

    <button onclick="window.location.href= '{{ url_for('views.map') }}';" class="button-style">
      Map
    </button>
    <button onclick="window.location.href= '{{ url_for('views.weather_summary') }}';" class="button-style">
      Weather Summary
    </button>
    <button onclick="window.location.href= '{{ url_for('views.graph') }}';" class="button-style">
      Graphs
    </button>
    <button onclick="window.location.href= '{{ url_for('views.settings') }}';" class="button-style">
      Settings
    </button>
    <button onclick="window.location.href= '{{ url_for('auth.admin_dashboard') }}';" class="button-style">
      Admin Dashboard
    </button>

  </div>
  
  <div class="centered-content">
    {{ data_display.weather_overview(weather_dict, weather_icon, rain_prediction) }}
  </div>
{% endblock %}