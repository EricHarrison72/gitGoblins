{% extends 'base.html.jinja' %}

{% block title %}
  Home
{% endblock %}

{% block header %}
  Home
{% endblock %}

{% block content %}

<ul>
    <div class="button-container">
      <button onclick="window.location.href = '{{ url_for('views.map') }}';" class="button-style">Map</button>
      <button onclick="window.location.href = '{{ url_for('views.weather_summary') }}';" class="button-style">Weather Summary</button>
      <button onclick="window.location.href = '{{ url_for('views.graph_past') }}';" class="button-style">Graphs</button>
      <button onclick="window.location.href = '{{ url_for('views.settings') }}';" class="button-style">Settings</button>
      <button onclick="window.location.href = '{{ url_for('auth.admin_dashboard') }}';" class="button-style">Admin Dashboard</button>
    </div>
  
    <div class="centered-content">
      {% if user_city_data %}

        <h2>{{ user_city_data.cityName }}</h2>

      {% else %}
        <p>No city data found for the user.</p>
      {% endif %}

      <h4>June 24, 2017</h4>



      <div class="table-container">
        <table class="scrollable-table">
          <tbody>
            {% if weather_data %}

            <img src="{{ url_for('static', filename='img/temp_high.png') }}" alt="High Temperature" width="30" height="30">
            <font size="+2">{{ weather_data.tempMax }}&deg &nbsp;&nbsp;&nbsp;
            
            <img src="{{ url_for('static', filename='img/temp_low.png') }}" alt="Low Temperature" width="30" height="30">  
            {{ weather_data.tempMin }}&deg</font>
            <br><br>

            {% if weather_data.rainToday == 'Yes' %}
              <img src="{{ url_for('static', filename='img/rain.png') }}" alt="Raining" width="30" height="30">  
            {% else %}
              <img src="{{ url_for('static', filename='img/no_rain.png') }}" alt="Not Raining" width="30" height="30">  
            {% endif %}

            &nbsp;&nbsp;&nbsp;
            {{ weather_data.rainfall }} %
            <br><br>

              <tr>
                <td>Sunshine</td>
                <td>{{ weather_data.sunshine }}</td>
              </tr>
              <tr>
                <td>Rainfall</td>
                <td>{{ weather_data.rainToday }}</td>
              </tr>
              <tr>
                <td>Evaporation</td>
                <td>{{ weather_data.evaporation }}</td>
              </tr>
              <tr>
                <td>Cloud 9am</td>
                <td>{{ weather_data.cloud9am }}</td>
              </tr>
              <tr>
                <td>Cloud 3pm</td>
                <td>{{ weather_data.cloud3pm }}</td>
              </tr>
              <tr>
                <td>Pressure 9am</td>
                <td>{{ weather_data.pressure9am }}</td>
              </tr>
              <tr>
                <td>Pressure 3pm</td>
                <td>{{ weather_data.pressure3pm }}</td>
              </tr>
              <tr>
                <td>Humidity 9am</td>
                <td>{{ weather_data.humidity9am }}</td>
              </tr>
              <tr>
                <td>Humidity 3pm</td>
                <td>{{ weather_data.humidity3pm }}</td>
              </tr>
              <tr>
                <td>Wind Gust Speed</td>
                <td>{{ weather_data.windGustSpeed }}</td>
              </tr>
              <tr>
                <td>Wind Gust Dir</td>
                <td>{{ weather_data.windGustDir }}</td>
              </tr>
              <tr>
                <td>Wind Speed 9am</td>
                <td>{{ weather_data.windSpeed9am }}</td>
              </tr>
              <tr>
                <td>Wind Speed 3pm</td>
                <td>{{ weather_data.windSpeed3pm }}</td>
              </tr>
              <tr>
                <td>Wind Dir 9am</td>
                <td>{{ weather_data.windDir9am }}</td>
              </tr>
              <tr>
                <td>Wind Dir 3pm</td>
                <td>{{ weather_data.windDir3pm }}</td>
              </tr>
              <tr>
                <td>Rain Today</td>
                <td>{{ weather_data.rainToday }}</td>
              </tr>
              <tr>
                <td>Rain Tomorrow</td>
                <td>{{ weather_data.rainTomorrow }}</td>
              </tr>
            {% else %}
              <tr>
                <td colspan="2">No weather data found for the specified date.</td>
              </tr>
            {% endif %}
          </tbody>
        </table>
      </div>
    </div>

</ul>
{% endblock %}


